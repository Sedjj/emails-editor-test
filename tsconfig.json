{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "build",
		"module": "esnext",
		"target": "es5",
		"downlevelIteration": true,
		"lib": [
			"es2019",
			"dom"
		],
		"sourceMap": true,
		"allowJs": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}